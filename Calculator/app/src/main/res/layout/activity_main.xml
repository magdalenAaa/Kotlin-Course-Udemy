<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.magdalena.calculator.MainActivity">

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:background="@color/colorGray"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="60pt"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="38pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:text="AC"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="38pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="btnNumbersEvent"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="38pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="38pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="btnMathOpEvent"
                android:text="รท"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="btnNumbersEvent"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnEight"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="btnNumbersEvent"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnNine"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="btnNumbersEvent"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="btnMathOpEvent"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="btnNumbersEvent"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnFive"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="btnNumbersEvent"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="btnNumbersEvent"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="btnMathOpEvent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="btnNumbersEvent"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="btnNumbersEvent"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="btnNumbersEvent"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="btnMathOpEvent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnZero"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/lightGray"
            android:onClick="btnNumbersEvent"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_weight="0.11"
            android:background="@color/lightGray"
            android:onClick="btnNumbersEvent"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="wrap_content"
            android:layout_height="30pt"
            android:layout_weight="0.09"
            android:background="@color/orange"
            android:onClick="btnEqualEvent"
            android:text="="
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
